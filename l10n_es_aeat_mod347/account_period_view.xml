<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

        <!-- Add quarter configuration on periods  -->
        <record id="view_account_period_quarter_form" model="ir.ui.view">
            <field name="name">account.period.quarter.form</field>
            <field name="model">account.period</field>
            <field name="inherit_id" ref="account.view_account_period_form"/>
            <field name="arch" type="xml">
                    <field name="company_id" position="after">
                        <field name="quarter"/>
                    </field>
            </field>
        </record>

        <record id="view_account_period_quarter_tree" model="ir.ui.view">
            <field name="name">account.period.quarter.tree</field>
            <field name="model">account.period</field>
            <field name="inherit_id" ref="account.view_account_period_tree"/>
            <field name="arch" type="xml">
                <field name="company_id" position="after">
                    <field name="quarter"/>
                </field>
            </field>
        </record>

		<record id="act_assign_quarter" model="ir.actions.server">
        	<field name="name">Assign Quarter</field>
        	<field name="state">code</field>
            <field name="model_id" ref="account.model_account_period"/>
            <field name="code">self.assign_quarter(cr, uid, context['active_ids'], context)</field>
        </record>

        <record model="ir.values" id="assign_quarter_act_menu">
            <field name="model_id" ref="product.model_product_template"/>
            <field name="name">"Assign Quarter" menu entry</field>
            <field name="key2">client_action_multi</field>
            <field name="value" eval="'ir.actions.server,%d'%act_assign_quarter"/>
            <field name="key">action</field>
            <field name="model">account.period</field>
        </record>
        
        <record id="act_assign_quarter" model="ir.actions.server">
        	<field name="menu_ir_values_id" ref="assign_quarter_act_menu"/>
        </record>

    </data>
</openerp>
